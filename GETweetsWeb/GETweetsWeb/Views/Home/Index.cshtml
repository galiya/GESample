            }

            // use generated tickValues on yAxis            
            chart.yAxis
                .tickFormat(function (d) { return d3.format(dataFormat)(d); })
                .tickValues([].concat.apply([], tmpTicks))
                .axisLabel(currentChartInfo.yaxis);

